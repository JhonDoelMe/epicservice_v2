# Приклад файлу .env для локального запуску epicservice_v2
# Заповніть ці значення відповідно до вашого оточення.

# Токен Telegram‑бота. Отримайте його у @BotFather.
BOT_TOKEN=<your_bot_token_here>

# ID адміністраторів, через кому. Наприклад: 123456789,987654321
ADMIN_IDS=123456789

# Параметри підключення до PostgreSQL
DB_USER=postgres
DB_PASS=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=epicservice

# Поріг масової деактивації під час імпорту (0–1). 0.5 означає 50%.
IMPORT_MAX_DEACTIVATE_SHARE=0.5

# Чи деактивувати відсутні у файлі товари (1=так, 0=ні)
IMPORT_DEACTIVATE_MISSING=1

# Ролі, які можуть списувати залишки (“admin”, “manager”)
SUBTRACT_ALLOWED_ROLES=admin,manager

# Департамент за замовчуванням для операції списання (залиште порожнім, якщо кожен рядок містить відділ)
DEPT_DEFAULT=

# Каталоги для імпортів та експортів (за замовчуванням «imports» та «exports»)
IMPORTS_DIR=imports
EXPORTS_DIR=exports

# Скільки днів зберігати файли експорту (0 або від’ємне значення — не видаляти)
EXPORTS_RETENTION_DAYS=30
